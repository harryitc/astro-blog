---
// Components
import BlogPost from "./BlogPost.astro";
import BaseLayoutV2 from "@layouts/BaseLayout-v2.astro";
import { AllPosts } from "src/content.config";

const pageTitle = "My Astro Learning Blog";

const allPosts = AllPosts();
---

<BaseLayoutV2 pageTitle={pageTitle}>
  <p>This is where I will post about my journey learning Astro.</p>
  <ul>
    {
      allPosts.map((post: any) => (
        <li>
          <BlogPost url={`../${post.id}`} title={post.title} pubDate={post.pubDate.toString().slice(0,10)}/>
        </li>
      ))
    }
  </ul>
</BaseLayoutV2>
