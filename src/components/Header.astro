---
import { Image } from "astro:assets";
import Navigation from "./Navigation.astro";

const SITE_URL = PROCESS_ENV.SITE_URL;
const BASE_PATH: string = MyPath("");
const HomePage = `${SITE_URL + BASE_PATH}`;

import myImage from "../assets/images/cuongdichoi.jpg";
import { PROCESS_ENV } from "@configs/process-env";
import { MyPath } from "@utils/PathRelative";
---

<header id="main-header" class="group border-b border-base-300">
  <div
    class="flex gap-2 group-[.menu-open]:flex-col md:!flex-row md:justify-between md:items-center max-w-6xl py-2 px-4 md:mx-auto"
  >
    <div class="w-full md:w-auto flex justify-between items-center">
      <a
        class="link-default link-nav flex flex-row items-center gap-2 text-xl xs:text-2xl"
        href={HomePage}
      >
        <Image
          src={myImage}
          loading="eager"
          alt="Profile picture"
          width="48"
          height="48"
          decoding="async"
          class="shrink-0 select-none rounded-md border border-base-300"
        />
        <span>Phan Ngọc Cường</span>
      </a>
      <mobile-button class="md:hidden">
        <button
          aria-expanded="false"
          aria-haspopup="menu"
          aria-label="Open main menu"
          type="button"
          class="group"
        >
          <svg
            width="1em"
            height="1em"
            class="h-6 w-6 group-aria-expanded:hidden"
            data-icon="mdi:hamburger-menu"
          >
            <symbol id="ai:mdi:hamburger-menu" viewBox="0 0 24 24">
              <path
                fill="currentColor"
                d="M3 6h18v2H3zm0 5h18v2H3zm0 5h18v2H3z"
              >
              </path>
            </symbol><use href="#ai:mdi:hamburger-menu"></use>
          </svg>
          <svg
            width="1em"
            height="1em"
            class="h-6 w-6 hidden group-aria-expanded:block"
            data-icon="mdi:close"
          >
            <symbol id="ai:mdi:close" viewBox="0 0 24 24">
              <path
                fill="currentColor"
                d="M19 6.41L17.59 5L12 10.59L6.41 5L5 6.41L10.59 12L5 17.59L6.41 19L12 13.41L17.59 19L19 17.59L13.41 12z"
              >
              </path>
            </symbol><use href="#ai:mdi:close"></use>
          </svg>
        </button>
      </mobile-button>
    </div>

    <Navigation />
  </div>
</header>
