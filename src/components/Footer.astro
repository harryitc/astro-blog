---
import { getLatestCommitInfo } from "@utils/Git";
import Social from "./Social.astro";

const ASTRO_VERSION = Astro.generator;

const lastCommit = getLatestCommitInfo();
---

<footer class="border-t border-base-300 py-8 px-4">
  <div class="max-w-6xl md:mx-auto flex justify-center md:justify-start">
    <div
      class="flex justify-between gap-4 flex-col-reverse md:flex-row md:w-full"
    >
      <!-- left column -->
      <div
        class="flex items-center gap-2 flex-wrap text-sm text-content whitespace-nowrap"
      >
        <div class="flex items-center gap-2">
          <label class="font-bold">Latest commit:</label>
          <a
            class="link-default link"
            href={`https://github.com/harryitc/astro-blog/commit/${lastCommit.fullHash}`}
            title="17th January, 8pm"
            target="_blank"
          >
            { lastCommit.message }
          </a>
        </div>
        <div class="flex items-center gap-2">
          <label class="font-bold">Design system:</label>
          <a class="link-default link" href="/design/" title="Design system">
            link
          </a>
        </div>
      </div>
      <!-- right column -->
      <ul class="flex gap-2 flex-wrap xs:flex-nowrap lg:items-center">
        <li>
          <a
            class="link-default link-nav flex items-center gap-2 text-base xs:text-lg"
            href="https://github.com/harryitc"
            target="_blank"
            rel="me noreferrer noopener"
            title="@harryitc on Github"
          >
            <svg
              width="1em"
              height="1em"
              class="h-6 w-6 fill-current"
              data-icon="mdi:github"
            >
              <symbol id="ai:mdi:github" viewBox="0 0 24 24">
                <path
                  fill="currentColor"
                  d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5c.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.87 1.52 2.34 1.07 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33s1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2"
                >
                </path>
              </symbol><use href="#ai:mdi:github"></use>
            </svg>
            <span>Github</span>
          </a>
        </li>
        <li>
          <a
            class="link-default link-nav flex items-center gap-2 text-base xs:text-lg"
            href="https://www.linkedin.com/in/harryitc"
            target="_blank"
            rel="me noreferrer noopener"
            title="Nemanja on LinkedIn"
          >
            <svg
              width="1em"
              height="1em"
              class="h-6 w-6 fill-current"
              data-icon="mdi:linkedin"
            >
              <symbol id="ai:mdi:linkedin" viewBox="0 0 24 24">
                <path
                  fill="currentColor"
                  d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2zm-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93zM6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37z"
                >
                </path>
              </symbol><use href="#ai:mdi:linkedin"></use>
            </svg>
            <span>LinkedIn</span>
          </a>
        </li>
        <li>
          <a
            class="link-default link-nav flex items-center gap-2 text-base xs:text-lg"
            href="/rss.xml"
            title="RSS feed for harryitc.github.io"
          >
            <svg
              width="1em"
              height="1em"
              class="h-6 w-6 fill-current"
              data-icon="mdi:rss"
            >
              <symbol id="ai:mdi:rss" viewBox="0 0 24 24">
                <path
                  fill="currentColor"
                  d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27zm0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93z"
                >
                </path>
              </symbol><use href="#ai:mdi:rss"></use>
            </svg>
            <span>RSS Feed</span>
          </a>
        </li>
      </ul>
    </div>
  </div>
</footer>

